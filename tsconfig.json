{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types/",
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "./",
    "target": "ESNext", // 输出代码的版本
    "module": "CommonJS", // 输出代码的模块风格
    "moduleResolution": "node", // 采用 Node 的方式解析模块
    "resolveJsonModule": true, // 解析 JSON 模块
    "noImplicitThis": true, // 除非人为指定，否则 this 的类型不能为 any
    "allowSyntheticDefaultImports": true, // 即使没有 export default 的模块，也能导入 default
    "esModuleInterop": true
  },
  "include": [
    "src",
    "test"
  ]
}
